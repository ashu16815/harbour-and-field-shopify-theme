<section class="page-width section-{{ section.id }}-padding">
  {%- if section.settings.heading != blank -%}
    <h1 class="h1" style="margin-bottom: 1rem;">{{ section.settings.heading }}</h1>
  {%- endif -%}
  <div class="rte">
    {{ section.settings.content }}
  </div>
</section>

{% schema %}
{
  "name": "Static page",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Add your content here.</p>"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top spacing",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom spacing",
      "default": 32
    }
  ]
}
{% endschema %}


