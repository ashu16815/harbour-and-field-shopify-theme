{% comment %}
  Harbour & Field Size Chart Modal Snippet
  Accessible size chart modal with measurement table
{% endcomment %}

<dialog id="size-chart-{{ product.id | default: 'default' }}" class="hf-size-chart-modal" aria-labelledby="sizeChartTitle-{{ product.id | default: 'default' }}">
  <div class="hf-size-chart-content">
    <h2 id="sizeChartTitle-{{ product.id | default: 'default' }}" class="hf-size-chart-title">
      Size Guide
    </h2>
    
    <div class="hf-size-chart-table-wrapper">
      {% render 'size-table' %}
    </div>
    
    <div class="hf-size-chart-actions">
      <button type="button" class="button button--primary" data-close-size-chart>
        Close
      </button>
    </div>
  </div>
</dialog>

<script>
  // Size chart modal functionality
  document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('size-chart-{{ product.id | default: 'default' }}');
    const openButtons = document.querySelectorAll('[data-open-size-chart]');
    const closeButton = modal?.querySelector('[data-close-size-chart]');
    
    if (!modal) return;
    
    // Open modal
    openButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        e.preventDefault();
        modal.showModal();
        document.body.style.overflow = 'hidden';
      });
    });
    
    // Close modal
    if (closeButton) {
      closeButton.addEventListener('click', () => {
        modal.close();
        document.body.style.overflow = '';
      });
    }
    
    // Close on escape key
    modal.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        modal.close();
        document.body.style.overflow = '';
      }
    });
    
    // Close on backdrop click
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        modal.close();
        document.body.style.overflow = '';
      }
    });
  });
</script>

<style>
  .hf-size-chart-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1000;
    border: none;
    padding: 0;
  }
  
  .hf-size-chart-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgb(var(--color-background));
    border-radius: 8px;
    padding: 3rem;
    max-width: 90vw;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  }
  
  .hf-size-chart-title {
    margin: 0 0 2rem 0;
    font-size: 2.4rem;
    font-weight: 600;
    color: rgb(var(--color-foreground));
  }
  
  .hf-size-chart-table-wrapper {
    margin-bottom: 2rem;
    overflow-x: auto;
  }
  
  .hf-size-chart-actions {
    text-align: right;
  }
  
  @media screen and (max-width: 749px) {
    .hf-size-chart-content {
      padding: 2rem;
      max-width: 95vw;
    }
    
    .hf-size-chart-title {
      font-size: 2rem;
    }
  }
</style>
